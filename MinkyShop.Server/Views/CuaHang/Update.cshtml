@model MinkyShop.Data.DomainClass.CuaHang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý cửa hàng</div>
                <hr>
                <form action="/cuahang/update" method="post">
                    @if (Model != null)
                    {
                        <div class="row">
                            <div class="form-group col-6">
                                <label>Mã cửa hàng</label>
                                <input type="text" class="form-control" asp-for="Ma" placeholder="Nhập mã cửa hàng">
                            </div>
                            <div class="form-group col-6">
                                <label>Tên cửa hàng</label>
                                <input type="text" class="form-control" asp-for="Ten" placeholder="Nhập tên cửa hàng">
                            </div>
                            <div class="form-group col-6">
                                <label>Địa chỉ</label>
                                <input type="text" class="form-control" asp-for="DiaChi" placeholder="Nhập địa chỉ">
                            </div>
                            <div class="form-group col-3">
                                <label>Thành phố</label>
                                <input type="text" class="form-control" asp-for="ThanhPho" placeholder="Nhập thành phố">
                            </div>
                            <div class="form-group col-3">
                                <label>Quốc gia</label>
                                <input type="text" class="form-control" asp-for="QuocGia" placeholder="Nhập quốc gia">
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="@Model.Id" name="Id" class="btn btn-success px-5">Sửa cửa hàng</button>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

