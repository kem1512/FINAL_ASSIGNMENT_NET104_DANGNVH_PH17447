@model EF_CODE_FIRST_FINAL_ASSIGNMENT.DomainClass.ChucVu
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý chức vụ</div>
                <hr>
                <form asp-action="Add" method="post">
                    <div class="row">
                        <div class="form-group col-6">
                            <label>Mã chức vụ</label>
                            <input type="text" class="form-control" name="Ma" placeholder="Nhập mã chức vụ">
                        </div>
                        <div class="form-group col-6">
                            <label>Tên chức vụ</label>
                            <input type="text" class="form-control" name="Ten" placeholder="Nhập tên chức vụ">
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-light px-5 mr-2">Thêm chức vụ</button>
                    </div>
                </form>
                <h5 class="card-title">Danh sách chức vụ</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th style="width: 20%">STT</th>
                            <th style="width: 25%">Mã chức vụ</th>
                            <th style="width: 25%">Tên chức vụ</th>
                            <th style="width: 30%">Thao tác</th>
                        </tr>
                        </thead>
                        <tbody>
                        @for (int i = 0; i < ViewBag.Result.Count; i++)
                        {
                            <tr>
                                <th>@i</th>
                                <td>@ViewBag.Result[i].Ma</td>
                                <td>@ViewBag.Result[i].Ten</td>
                                <td>
                                    <a href="/chucvu/detail/@ViewBag.Result[i].Id" class="btn btn-success px-5">Sửa chức vụ</a>
                                    <a href="/chucvu/remove/@ViewBag.Result[i].Id" class="btn btn-danger px-5" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa chức vụ</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



