@model EF_CODE_FIRST_FINAL_ASSIGNMENT.DomainClass.ChucVu
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý chức vụ</div>
                <hr>
                <form action="/chucvu/update">
                    @if (Model != null)
                    {
                        <div class="row">
                            <div class="form-group col-6">
                                <label>Mã chức vụ</label>
                                <input type="text" class="form-control" asp-for="Ma" placeholder="Nhập mã chức vụ">
                            </div>
                            <div class="form-group col-6">
                                <label>Tên chức vụ</label>
                                <input type="text" class="form-control" asp-for="Ten" placeholder="Nhập tên chức vụ">
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="@Model.Id" name="Id" class="btn btn-success px-5">Sửa chức vụ</button>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    toastr.success('Thành công!');
</script>


