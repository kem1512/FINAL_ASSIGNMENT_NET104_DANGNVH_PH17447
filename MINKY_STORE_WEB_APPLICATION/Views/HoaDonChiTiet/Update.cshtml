@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý hóa đơn</div>
                <form action="/hoadonchitiet/update" method="post">
                    <div class="row">
                        <div class="form-group col-6">
                            <label>Đơn giá</label>
                            <input type="text" class="form-control" name="GiaBan" placeholder="Nhập đơn giá">
                        </div>
                        <div class="form-group col-6">
                            <label>Số lượng</label>
                            <input type="text" class="form-control" name="SoLuong" placeholder="Nhập số lượng">
                        </div>
                    </div>
                    <div class="form-group col-3">
                        <label>Chọn sản phẩm</label>
                        <select class="custom-select" name="IdCv">
                            @foreach (var x in Model.Item2)
                            {
                                // var isSelected = x.Id == @Model. ? "selected" : "";
                                <option value="@x.ChiTietSp.Id">@x.SanPham.Ten</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


