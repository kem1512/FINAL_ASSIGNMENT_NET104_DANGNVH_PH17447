@model EF_CODE_FIRST_FINAL_ASSIGNMENT.DomainClass.Nsx
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý Nhà sản xuất</div>
                <hr>
                <form action="/nsx/update" method="post">
                    @if (Model != null)
                    {
                        <div class="row">
                            <div class="form-group col-6">
                                <label>Mã Nhà sản xuất</label>
                                <input type="text" class="form-control" value="@Model.Ma" name="Ma" placeholder="Nhập mã Nhà sản xuất">
                            </div>
                            <div class="form-group col-6">
                                <label>Tên Nhà sản xuất</label>
                                <input type="text" class="form-control" value="@Model.Ten" name="Ten" placeholder="Nhập tên Nhà sản xuất">
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="@Model.Id" name="Id" class="btn btn-success px-5">Sửa nhà sản xuất</button>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>