<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Minky Store</title>
    <!--favicon-->
    <link rel="icon" href="~/assets/images/favicon.ico" type="image/x-icon">
    <!-- Bootstrap core CSS-->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet"/>
    <!-- animate CSS-->
    <link href="~/assets/css/animate.css" rel="stylesheet" type="text/css"/>
    <!-- Icons CSS-->
    <link href="~/assets/css/icons.css" rel="stylesheet" type="text/css"/>
    <!-- Sidebar CSS-->
    <link href="~/assets/css/sidebar-menu.css" rel="stylesheet"/>
    <!-- Custom Style-->
    <link href="~/assets/css/app-style.css" rel="stylesheet"/>

    <link rel="stylesheet" href="~/assets/css/sell.css" />
</head>
<body class="bg-theme bg-theme1">

<!-- Start wrapper-->
<div id="wrapper">

<!--Start sidebar-wrapper-->
<div id="sidebar-wrapper" data-simplebar="" data-simplebar-auto-hide="true">
    <div class="brand-logo">
        <a href="/banhang">
            <img src="/assets/images/logo-icon.png" class="logo-icon" alt="logo icon">
            <h5 class="logo-text">Minky Store</h5>
        </a>
    </div>
    <ul class="sidebar-menu do-nicescrol">
        <li class="sidebar-header">THANH ĐIỀU HƯỚNG</li>
        <li>
            <a href="/banhang">
                <i class="zmdi zmdi-view-dashboard"></i> <span>Trang chủ</span>
            </a>
        </li>

        <li>
            <a href="/nhanvien">
                <i class="zmdi zmdi-invert-colors"></i> <span>Nhân viên</span>
            </a>
        </li>

        <li>
            <a href="/chitietsp">
                <i class="zmdi zmdi-format-list-bulleted"></i> <span>Sản phẩm</span>
            </a>
        </li>
        
        <li>
            <a href="/khachhang">
                <i class="zmdi zmdi-face"></i> <span>Khách hàng</span>
            </a>
        </li>

        <li>
            <a href="/hoadon">
                <i class="zmdi zmdi-grid"></i> <span>Hóa đơn</span>
            </a>
        </li>

        <li>
            <a href="#">
                <i class="zmdi zmdi-calendar-check"></i> <span>Cửa hàng</span>
                <small class="badge float-right badge-light">New</small>
            </a>
        </li>

         <li>
            <a href="#">
                <i class="zmdi zmdi-account-circle"></i> <span>Tài khoản</span>
            </a>
        </li>

        <li>
            <a href="#">
                <i class="zmdi zmdi-lock"></i> <span>Hóa đơn chờ</span>
            </a>
        </li>

        <li class="sidebar-header">CHỨC NĂNG THÊM</li>
        <li>
            <a href="#">
                <i class="zmdi zmdi-coffee text-danger"></i> <span>Thống kê doanh thu</span>
            </a>
        </li>
        <li>
            <a href="#">
                <i class="zmdi zmdi-chart-donut text-success"></i> <span>Thống kê sản phẩm</span>
            </a>
        </li>
        <li>
            <a href="#">
                <i class="zmdi zmdi-share text-info"></i> <span>Báo cáo của nhân viên</span>
            </a>
        </li>

    </ul>

</div>
<!--End sidebar-wrapper-->

<!--Start topbar header-->
<header class="topbar-nav">
    <nav class="navbar navbar-expand fixed-top">
        <ul class="navbar-nav mr-auto align-items-center">
            <li class="nav-item">
                <a class="nav-link toggle-menu" href="#">
                    <i class="icon-menu menu-icon"></i>
                </a>
            </li>
            <li class="nav-item">
                <form class="search-bar" action="/banhang/filer">
                    <input type="text" class="form-control" name="name" placeholder="Nhập từ khóa">
                    <a href="#">
                        <i class="icon-magnifier"></i>
                    </a>
                </form>
            </li>
        </ul>

        <ul class="navbar-nav align-items-center right-nav-link">
            <li class="nav-item dropdown-lg">
                <a class="nav-link" href="/banhang/cart">
                    <i class="fa fa-shopping-cart"></i>
                </a>
            </li>
            <li class="nav-item dropdown-lg">
                <a class="nav-link dropdown-toggle dropdown-toggle-nocaret waves-effect" data-toggle="dropdown" href="#">
                    <i class="fa fa-bell-o"></i>
                </a>
            </li>
            <li class="nav-item language">
                <a class="nav-link dropdown-toggle dropdown-toggle-nocaret waves-effect" data-toggle="dropdown" href="#">
                    <i class="fa fa-flag"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li class="dropdown-item"> <i class="flag-icon flag-icon-gb mr-2"></i> English</li>
                    <li class="dropdown-item"> <i class="flag-icon flag-icon-fr mr-2"></i> French</li>
                    <li class="dropdown-item"> <i class="flag-icon flag-icon-cn mr-2"></i> Chinese</li>
                    <li class="dropdown-item"> <i class="flag-icon flag-icon-de mr-2"></i> German</li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link dropdown-toggle dropdown-toggle-nocaret" data-toggle="dropdown" href="#">
                    <span class="user-profile">
                        <img src="/assets/images/user.png"/>
                    </span>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li class="dropdown-item user-details">
                        <a href="#">
                            <div class="media">
                                <div class="avatar">
                                    <img class="align-self-start mr-3" src="/assets/images/user.png"/>
                                </div>
                                <div class="media-body">
                                    <h6 class="mt-2 user-title">Sarajhon Mccoy</h6>
                                    <p class="user-subtitle">mccoy@example.com</p>
                                </div>
                            </div>
                        </a>
                    </li>
                    <li class="dropdown-divider"></li>
                    <li class="dropdown-item"><i class="icon-envelope mr-2"></i> Inbox</li>
                    <li class="dropdown-divider"></li>
                    <li class="dropdown-item"><i class="icon-wallet mr-2"></i> Account</li>
                    <li class="dropdown-divider"></li>
                    <li class="dropdown-item"><i class="icon-settings mr-2"></i> Setting</li>
                    <li class="dropdown-divider"></li>
                    <li class="dropdown-item"><i class="icon-power mr-2"></i> Logout</li>
                </ul>
            </li>
        </ul>
    </nav>
</header>
<!--End topbar header-->

@* <div class="clearfix"></div> *@

<div class="content-wrapper">
    <div class="container-fluid">
        @RenderBody()
        <!--End Dashboard Content-->

        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
    <!-- End container-fluid-->

</div><!--End content-wrapper-->
<!--Start Back To Top Button-->
<a href="#" class="back-to-top">
    <i class="fa fa-angle-double-up"></i>
</a>
<!--End Back To Top Button-->

</div><!--End wrapper-->

<!-- Bootstrap core JavaScript-->
<script src="~/assets/js/jquery.min.js"></script>
<script src="~/assets/js/popper.min.js"></script>
<script src="~/assets/js/bootstrap.min.js"></script>

<!-- sidebar-menu js -->
<script src="~/assets/js/sidebar-menu.js"></script>

