@model List<MINKY_STORE_WEB_APPLICATION.Models.SanPhamViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Danh sách sản phẩm</div>
                <hr>
                <div class="row">
                    @foreach (var x in @Model)
                    {
                        <div class="col-lg-3">
                            <div class="product">
                                <div class="product-img">
                                    <img src="assets/images/products/@x.ChiTietSp.Anh" alt="">
                                    <div class="add-to-cart">
                                        <a class="add-to-cart-btn" href="/banhang/addcart/@x.ChiTietSp.Id"><i class="fa fa-shopping-cart"></i> add to cart</a>
                                    </div>
                                </div>
                                <div class="product-body">
                                    <h3 class="product-name"><a href="#" class="text-danger">@x.SanPham.Ten (@x.MauSac.Ten)</a></h3>
                                    <h4 class="product-price">$@x.ChiTietSp.GiaNhap <del class="product-old-price">$@x.ChiTietSp.GiaBan</del></h4>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

