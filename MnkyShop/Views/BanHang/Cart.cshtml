@model HoaDon
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    <div class="row mt-3">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Giỏ hàng</div>
                    <hr>
                    <div class="row d-flex justify-content-center my-4">
                        <div class="col-md-8">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <!-- Single item -->
                                    @foreach (var (x, index) in Model.HoaDonChiTiets.Select((value, index) => (value, index)))
                                    {
                                        <form asp-action="UpdateCart">
                                            <div class="row p-3">
                                                <div class="col-lg-3 col-md-12 mb-4 mb-lg-0" style="background-color: #fff; border-radius: 30px">
                                                    <!-- Image -->
                                                    <div class="p-4">
                                                        <img src="@x.ChiTietSp.Anh" class="w-100" />
                                                    </div>
                                                    <!-- Image -->
                                                </div>

                                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                                    <!-- Data -->
                                                    <p><strong>@x.ChiTietSp.SanPham.Ten</strong></p>
                                                    <p>Màu sắc: @x.ChiTietSp.MauSac.Ten</p>

                                                    <!-- Remove button -->
                                                    <button type="button" class="btn btn-danger btn-sm mb-2" onclick="removeItem(@index)">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                    <!-- Data -->
                                                </div>

                                                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                                    <!-- Quantity -->
                                                    <div class="d-flex mb-4" style="max-width: 300px">
                                                        <button type="button" onclick="this.parentNode.querySelector('input[type=number]').stepDown()" class="btn btn-primary px-3">
                                                            <i class="fa fa-minus"></i>
                                                        </button>

                                                        <div class="w-100">
                                                            <input min="1" max="50" name="soLuong" value="@x.SoLuong" type="number" class="form-control" />
                                                        </div>

                                                        <button type="button" onclick="this.parentNode.querySelector('input[type=number]').stepUp()" class="btn btn-primary px-3">
                                                            <i class="fa fa-plus"></i>
                                                        </button>
                                                    </div>
                                                    <!-- Quantity -->
                                                    <!-- Price -->
                                                    <p class="text-md-center">
                                                        <strong>@string.Format("{0:0,0}", x.ChiTietSp.GiaBan * x.SoLuong) VNĐ</strong>
                                                    </p>

                                                    <div class="text-center mt-3">
                                                        <button class="btn btn-warning w-100" name="idChiTietSp" type="submit" value="@x.IdChiTietSp">
                                                            Cập nhật
                                                        </button>
                                                    </div>
                                                    <!-- Price -->
                                                </div>
                                            </div>
                                        </form>
                                        <hr class="my-4" />
                                    }
                                    <!-- Single item -->
                                    <a href="/banhang" class="btn btn-success">Quay về trang bán hàng</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5>Hóa đơn</h5>
                                </div>
                                <form action="/hoadon/add">
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label>Tên người nhận</label>
                                            <input type="text" class="form-control" name="TenNguoiNhan" placeholder="Nhập tên người nhận">
                                        </div>
                                        <div class="form-group">
                                            <label>Địa chỉ</label>
                                            <input type="text" class="form-control" name="DiaChi" placeholder="Nhập địa chỉ">
                                        </div>
                                        <div class="form-group">
                                            <label>Số điện thoại</label>
                                            <input type="text" class="form-control" name="Sdt" placeholder="Nhập số điện thoại">
                                        </div>
                                        <hr />
                                        <strong>Tổng tiền: @string.Format("{0:0,0}", Model.TongTien) VNĐ</strong>
                                        <button onclick="return confirm('Bạn có chắc muốn thêm hóa đơn?')" type="submit" class="btn btn-primary btn-lg btn-block mt-3">
                                            Thanh toán
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Add anti-forgery token -->
@Html.AntiForgeryToken()

<script>
        function removeItem(id) {
        if (confirm('Bạn có chắc muốn xóa?')) {
            // Thực hiện AJAX POST để xóa mục
            fetch('/BanHang/RemoveCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({
                    index: id
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.href = data.redirectUrl; // Chuyển hướng đến URL mới
                } else {
                    alert('Có lỗi xảy ra khi xóa mục.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
    }
</script>


