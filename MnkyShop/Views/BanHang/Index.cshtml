@model List<SanPham>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="assets/css/sell.css" />
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body px-5">
                <div class="card-title">Danh sách sản phẩm</div>
                <hr>
                <div class="row">
                    @foreach (SanPham x in Model)
                    {
                        <div class="col-lg-3">
                            <div class="product">
                                <div class="product-img">
                                    <img src="@x.ChiTietSps.First().Anh" alt="">
                                    <form asp-action="AddCart" class="add-to-cart">
                                        <button type="submit" name="idChiTietSp" value="@x.ChiTietSps.First().Id" class="add-to-cart-btn"> add to cart <i class="fa fa-shopping-cart"></i></button>
                                    </form>
                                </div>
                                <div class="product-body">
                                    <h3 class="product-name"><a href="#" class="text-danger">@x.Ten</a></h3>
                                    <h4 class="product-price"> @string.Format("{0:0,0}", @x.ChiTietSps.First().GiaBan) VNĐ
                                        <del class="product-old-price">@string.Format("{0:0,0}", @x.ChiTietSps.First().GiaNhap) VNĐ</del>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @await Html.PartialAsync("Pagination", new PaginationViewModel
                {
                   CurrentPageIndex = ViewBag.CurrentPageIndex,
                   PageCount = ViewBag.PageCount,
                   PageName = "SanPham"
                })
            </div>
        </div>
    </div>
</div>

