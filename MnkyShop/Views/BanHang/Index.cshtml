@model List<SanPham>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body px-5">
                <div class="card-title text-uppercase">Danh sách sản phẩm</div>
                <hr>
                <form class="row" method="get">
                    <div class="col-md-3 form-group">
                        <select class="custom-select w-100" name="idMauSac">
                            <option value="">Chọn màu sắc</option>
                            @foreach (var x in ViewBag.MauSac)
                            {
                                int? selectedMauSac = null;
                                if (int.TryParse(ViewContext.HttpContext.Request.Query["idMauSac"], out int idMauSac))
                                {
                                    selectedMauSac = idMauSac;
                                }
                                <!option value="@x.Id" @(x.Id == selectedMauSac ? "selected" : "")>@x.Ten</!option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3 form-group">
                        <select class="custom-select w-100" name="idNsx">
                            <option value="">Chọn hãng</option>
                            @foreach (var x in ViewBag.Nsx)
                            {
                                int? selectedNsx = null;
                                if (int.TryParse(ViewContext.HttpContext.Request.Query["idNsx"], out int idNsx))
                                {
                                    selectedNsx = idNsx;
                                }
                                <!option value="@x.Id" @(x.Id == selectedNsx ? "selected" : "")>@x.Ten</!option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control w-100" name="tenSp" placeholder="Nhập tên sản phẩm" value="@ViewContext.HttpContext.Request.Query["tenSp"]">
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
                    </div>
                </form>
                <div class="row">
                    @foreach (var x in Model)
                    {
                        <div class="col-lg-3">
                            <div class="product">
                                <div class="product-img">
                                    <img src="@x.ChiTietSps.First().Anh" alt="">
                                    <form asp-action="AddCart" class="add-to-cart">
                                        <button type="submit" name="idChiTietSp" value="@x.ChiTietSps.First().Id" class="add-to-cart-btn"> add to cart <i class="fa fa-shopping-cart"></i></button>
                                    </form>
                                </div>
                                <div class="product-body">
                                    <h3 class="product-name">
                                        <a href="@Url.ActionLink("Detail", "BanHang", new { idSp = x.Id })" class="text-danger">@x.Ten (@x.ChiTietSps.Count Màu)</a>
                                    </h3>
                                    <h4 class="product-price">
                                        @Helper.FormatVietNamDong(x.ChiTietSps.First().GiaBan)
                                        <del class="product-old-price">@Helper.FormatVietNamDong(@x.ChiTietSps.First().GiaNhap)</del>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @await Html.PartialAsync("Pagination", new PaginationViewModel
                {
                    CurrentPageIndex = ViewBag.CurrentPageIndex,
                    PageCount = ViewBag.PageCount,
                    PageName = "BanHang"
                })
            </div>
        </div>
    </div>
</div>

