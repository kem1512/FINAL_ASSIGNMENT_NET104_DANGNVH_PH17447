@model MauSac
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý màu sắc</div>
                <hr>
                <form asp-action="Create">
                    <div class="form-group">
                        <div class="d-flex justify-content-between">
                            <label>Tên màu sắc</label>
                            <span asp-validation-for="Ten" class="text-warning font-weight-bold"></span>
                        </div>
                        <input class="form-control" asp-for="Ten" placeholder="Nhập tên màu sắc">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success px-5 mr-2">Thêm màu sắc</button>
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Mã màu sắc</th>
                                <th>Tên màu sắc</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in ViewBag.MauSacs)
                            {
                                <tr>
                                    <th>@x.Id</th>
                                    <td>@x.Ten</td>
                                    <td style="display: flex; gap: 10px">
                                        @Html.ActionLink("Sửa", "Update", "MauSac", new { id = x.Id }, new { @class = "btn btn-success" })
                                        <form asp-action="Remove" onsubmit="return confirm('Bạn có chắc muốn xóa màu sắc này?')">
                                            <button class="btn btn-danger" type="submit" name="id" value="@x.Id">Xóa</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @await Html.PartialAsync("Pagination", new PaginationViewModel
                {
                    CurrentPageIndex = ViewBag.CurrentPageIndex,
                    PageCount = ViewBag.PageCount,
                    PageName = "MauSac"
                })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

