@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý sản phẩm</div>
                <hr>
                <form action="/sanpham/create" method="post">
                    <div class="row">
                        <div class="form-group col-6">
                            <label>Mã sản phẩm</label>
                            <input type="text" class="form-control" name="Ma" placeholder="Nhập mã sản phẩm">
                        </div>
                        <div class="form-group col-6">
                            <label>Tên sản phẩm</label>
                            <input type="text" class="form-control" name="Ten" placeholder="Nhập tên sản phẩm">
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-light px-5 mr-2">Thêm sản phẩm</button>
                        <button type="submit" class="btn btn-success px-5">Sửa sản phẩm</button>
                    </div>
                </form>
                <h5 class="card-title">Danh sách sản phẩm</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 20%">STT</th>
                                <th style="width: 25%">Mã sản phẩm</th>
                                <th style="width: 25%">Tên sản phẩm</th>
                                <th style="width: 30%">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <th>@i</th>
                                    <td>@Model[i].Ma</td>
                                    <td>@Model[i].Ten</td>
                                    <td>
                                        <a href="/sanpham/detail/@Model[i].Id" class="btn btn-success px-5">Sửa sản phẩm</a>
                                        <a href="/sanpham/remove/@Model[i].Id" class="btn btn-danger px-5" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa sản phẩm</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

