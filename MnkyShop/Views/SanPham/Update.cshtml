@model SanPham
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý sản phẩm</div>
                <hr>
                <form action="/sanpham/update" method="post">
                    @if (Model != null)
                    {
                        <div class="row">
                            <div class="form-group col-6">
                                <label>Tên sản phẩm</label>
                                <input type="text" class="form-control" value="@Model.Ten" name="Ten" placeholder="Nhập tên sản phẩm">
                            </div>
                            <div class="form-group col-6">
                                <div class="d-flex justify-content-between">
                                    <label>Dòng sản phẩm</label>
                                    <span asp-validation-for="IdDongSp" class="text-warning font-weight-bold"></span>
                                </div>
                                <select class="custom-select" name="IdDongSp">
                                    <!option value="">Chọn dòng sản phẩm</!option>
                                    @foreach (DongSp x in ViewBag.DongSp)
                                    {
                                        var isSelected = x.Id == Model.IdDongSp ? "selected" : "";
                                        <!option @isSelected value="@x.Id">@x.Ten</!option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="@Model.Id" name="Id" class="btn btn-success px-5">Sửa sản phẩm</button>
                        </div>
                    }else
                    {
                        <div class="alert alert-danger">
                            Không Có Gì Ở Đây Cả
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

