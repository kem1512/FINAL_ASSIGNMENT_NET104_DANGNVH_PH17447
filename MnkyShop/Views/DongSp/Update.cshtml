@model DongSp
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý dòng sản phẩm</div>
                <hr>
                <form action="/dongsp/update" method="post">
                    @if (Model != null)
                    {
                        <div class="row">
                            <div class="form-group col-6">
                                <label>Tên dòng dòng sản phẩm</label>
                                <input type="text" class="form-control" value="@Model.Ten" name="Ten" placeholder="Nhập tên dòng dòng sản phẩm">
                            </div>
                            <div class="form-group col-6">
                                <div class="d-flex justify-content-between">
                                    <label>Nhà sản xuất</label>
                                    <span asp-validation-for="IdNsx" class="text-warning font-weight-bold"></span>
                                </div>
                                <select class="custom-select" asp-for="IdNsx">
                                    <!option value="">Nhà sản xuất</!option>
                                    @foreach (Nsx x in ViewBag.Nsx)
                                    {
                                        var isSelected = x.Id == Model.IdNsx ? "selected" : "";
                                        <!option @isSelected value="@x.Id">@x.Ten</!option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="@Model.Id" name="Id" class="btn btn-success px-5">Sửa dòng dòng sản phẩm</button>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

