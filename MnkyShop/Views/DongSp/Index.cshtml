@model DongSp
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý dòng sản phẩm</div>
                <hr>
                <form asp-action="Create" method="post">
                    <div class="row">
                        <div class="form-group col-6">
                            <label>Tên dòng sản phẩm</label>
                            <input type="text" class="form-control" name="Ten" placeholder="Nhập tên dòng sản phẩm">
                        </div>
                        <div class="form-group col-6">
                            <div class="d-flex justify-content-between">
                                <label>Nhà sản xuất</label>
                                <span asp-validation-for="IdNsx" class="text-warning font-weight-bold"></span>
                            </div>
                            <select class="custom-select" asp-for="IdNsx">
                                <option value="">Nhà sản xuất</option>
                                @foreach (Nsx x in ViewBag.Nsx)
                                {
                                    <option value="@x.Id">@x.Ten</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-light px-5 mr-2">Thêm dòng sản phẩm</button>
                        @Html.ActionLink("Thêm nhà sản xuất", "Index", "Nsx", null, new { @class = "btn btn-info px-5" })
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Mã dòng sản phẩm</th>
                                <th>Tên dòng sản phẩm</th>
                                <th>Nhà sản xuất</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DongSp x in ViewBag.DongSp)
                            {
                                <tr>
                                    <th>@x.Id</th>
                                    <td>@x.Ten</td>
                                    <td>@x.Nsx.Ten</td>
                                    <td>
                                        @Html.ActionLink("Sửa sản phẩm", "Update", "DongSp", new { id = x.Id }, new { @class = "btn btn-success" })
                                    </td>
                                    <td>
                                        <form asp-action="Remove" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">
                                            <button class="btn btn-danger" type="submit" name="id" value="@x.Id">Xóa sản phẩm</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

