<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Minky Shop</title>
    <!--favicon-->
    <link rel="icon" href="~/assets/images/favicon.ico" type="image/x-icon">
    <!-- Bootstrap core CSS-->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- animate CSS-->
    <link href="~/assets/css/animate.css" rel="stylesheet" type="text/css" />
    <!-- Icons CSS-->
    <link href="~/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <!-- Sidebar CSS-->
    <link href="~/assets/css/sidebar-menu.css" rel="stylesheet" />
    <!-- Custom Style-->
    <link href="~/assets/css/app-style.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/assets/css/sell.css" />

    <link rel="stylesheet" href="~/assets/css/toastr.css" />
</head>
<body class="bg-theme bg-theme1">

    <!-- Start wrapper-->
    <div id="wrapper">
        <!--Start sidebar-wrapper-->
        <div id="sidebar-wrapper" data-simplebar="" data-simplebar-auto-hide="true">
            <div class="brand-logo">
                <a href="/banhang">
                    <img src="/assets/images/logo-icon.png" class="logo-icon" alt="logo icon">
                    <h5 class="logo-text">Minky Shop</h5>
                </a>
            </div>
            <ul class="sidebar-menu do-nicescrol">
                <li class="sidebar-header">Thanh điều hướng</li>
                <li>
                    <a href="/banhang">
                        <i class="zmdi zmdi-view-dashboard"></i> <span>Trang chủ</span>
                    </a>
                </li>

                <li class="sidebar-header">Mục Sản Phẩm</li>

                <li>
                    <a href="@Url.Action("Index", "SanPham")">
                        <i class="zmdi zmdi-format-list-bulleted"></i> <span>Sản phẩm</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "MauSac")">
                        <i class="zmdi zmdi-invert-colors"></i> <span>Màu Sắc</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "DongSp")">
                        <i class="zmdi zmdi-flattr"></i> <span>Dòng Sản Phẩm</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "Nsx")">
                        <i class="zmdi zmdi-face"></i> <span>Nhà Sản Xuất</span>
                    </a>
                </li>

                <li class="sidebar-header">Mục Hóa Đơn</li>

                <li>
                    <a href="/hoadon">
                        <i class="zmdi zmdi-grid"></i> <span>Hóa đơn</span>
                    </a>
                </li>
            </ul>

        </div>
        <!--End sidebar-wrapper-->
        <!--Start topbar header-->
        <header class="topbar-nav">
            <nav class="navbar navbar-expand fixed-top">
                <ul class="navbar-nav mr-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link toggle-menu" href="#">
                            <i class="icon-menu menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <form class="search-bar" action="/banhang/filter">
                            <input type="text" class="form-control" name="name" placeholder="Nhập mã hóa đơn">
                            <a href="#">
                                <i class="icon-magnifier"></i>
                            </a>
                        </form>
                    </li>
                </ul>

                <ul class="navbar-nav align-items-center right-nav-link">
                    <li class="nav-item dropdown-lg">
                        <a class="nav-link" href="@Url.Action("Cart", "BanHang")">
                            <i class="fa fa-shopping-cart"></i>
                        </a>
                    </li>
                    <li class="nav-item dropdown-lg">
                        <a class="nav-link" href="#">
                            <i class="fa fa-bell-o"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <a class="nav-link" href="/Identity/Account/Manage">
                                <span class="user-profile">
                                    <img src="/assets/images/user.png" />
                                </span>
                            </a>
                        }
                        else
                        {
                            <a class="nav-link" href="/Identity/Account/Login">
                                <span class="user-profile">
                                    <img src="/assets/images/user.png" />
                                </span>
                            </a>
                        }
                    </li>
                </ul>
            </nav>
        </header>
        <!--End topbar header-->
        @* <div class="clearfix"></div> *@

        <div class="content-wrapper">
            <div class="container-fluid">
                @RenderBody()
                <!--End Dashboard Content-->
                <!--start overlay-->
                <div class="overlay toggle-menu"></div>
                <!--end overlay-->

            </div>
            <!-- End container-fluid-->

        </div><!--End content-wrapper-->
        <!--Start Back To Top Button-->
        <a href="#" class="back-to-top">
            <i class="fa fa-angle-double-up"></i>
        </a>
        <!--End Back To Top Button-->

    </div><!--End wrapper-->
    <!-- Bootstrap core JavaScript-->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>


    <!-- sidebar-menu js -->
    <script src="~/assets/js/sidebar-menu.js"></script>

    <!-- Custom scripts -->
    <script src="~/assets/js/app-script.js"></script>

    <!-- Toastr -->
    <script src="~/assets/js/toastr.min.js"></script>

    @if (ViewBag.Message != null)
    {
        <script>
            toastr.success('@ViewBag.Message');
        </script>
    }

    @RenderSection("Scripts", required: false)
</body>
</html>