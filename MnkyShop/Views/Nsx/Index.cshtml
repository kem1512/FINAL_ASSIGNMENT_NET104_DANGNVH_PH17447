@model Nsx
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý nhà sản xuất</div>
                <hr>
                <form action="/nsx/create" method="post">
                    <div class="row">
                        <div class="form-group col-6">
                            <label>Tên nhà sản xuất</label>
                            <input type="text" class="form-control" name="Ten" placeholder="Nhập tên nhà sản xuất">
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-light px-5 mr-2">Thêm nhà sản xuất</button>
                    </div>
                </form>
                <h5 class="card-title">Danh sách Nhà sản xuất</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 20%">STT</th>
                                <th style="width: 25%">Tên nhà sản xuất</th>
                                <th style="width: 30%">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Nsx x in ViewBag.Nsx)
                            {
                                <tr>
                                    <th>@x.Id</th>
                                    <td>@x.Ten</td>
                                    <td>
                                        @Html.ActionLink("Sửa nhà sản xuất", "Update", "Nsx", new { id = x.Id }, new { @class = "btn btn-success" })
                                    </td>
                                    <td>
                                        <form asp-action="Remove" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa nhà sản xuất này?')">
                                            <button class="btn btn-danger" type="submit" name="id" value="@x.Id">Xóa nhà sản xuất</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

