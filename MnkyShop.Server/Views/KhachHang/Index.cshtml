@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý khách hàng</div>
                <hr>
                <form action="/khachhang/create" method="post">
                    <div class="row">
                        <div class="form-group col-6">
                            <label>Mã khách hàng</label>
                            <input type="text" class="form-control" name="Ma" placeholder="Nhập mã khách hàng">
                        </div>
                        <div class="form-group col-6">
                            <label>Nhập họ khách hàng</label>
                            <div class="row">
                                <div class="col">
                                    <input type="text" class="form-control" name="Ho" placeholder="Nhập họ khách hàng">
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control" name="TenDem" placeholder="Nhập tên đệm khách hàng">
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control" name="Ten" placeholder="Nhập tên khách hàng">
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-3">
                            <label>Ngày sinh</label>
                            <input type="date" class="form-control" name="NgaySinh" placeholder="Nhập ngày sinh">
                        </div>
                        <div class="form-group col-3">
                            <label>Số điện thoại</label>
                            <input type="text" class="form-control" name="Sdt" placeholder="Nhập số điện thoại">
                        </div>
                        <div class="form-group col-6">
                            <label>Địa chỉ</label>
                            <input type="text" class="form-control" name="DiaChi" placeholder="Nhập địa chỉ">
                        </div>
                        <div class="form-group col-3">
                            <label>Thành phố</label>
                            <input type="text" class="form-control" name="ThanhPho" placeholder="Nhập thành phố">
                        </div>
                        <div class="form-group col-3">
                            <label>Quốc gia</label>
                            <input type="text" class="form-control" name="QuocGia" placeholder="Nhập quốc gia">
                        </div>
                        <div class="form-group col-6">
                            <label>Mật khẩu</label>
                            <input type="text" class="form-control" name="MatKhau" placeholder="Nhập mật khẩu">
                        </div>
                    </div>
                    <div class="form-group py-2">
                        <button type="submit" class="btn btn-light px-5 mr-2">Thêm khách hàng</button>
                    </div>
                </form>
                <h5 class="card-title">Danh sách khách hàng</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Mã chức vụ</th>
                                <th>Họ và tên</th>
                                <th>Ngày sinh</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th>Quốc gia</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (@Model.Count != 0)
                            {
                                @foreach (var x in Model)
                                {
                                    <tr>
                                        <td class="align-middle">@x.Ma</td>
                                        <td class="align-middle">@x.Ho @x.TenDem @x.Ten</td>
                                        <td class="align-middle">@x.NgaySinh.ToString("dd/MM/yyyy")</td>
                                        <td class="align-middle">@x.DiaChi</td>
                                        <td class="align-middle">@x.Sdt</td>
                                        <td class="align-middle">@x.QuocGia</td>
                                        <td class="align-middle">
                                            <a href="/khachhang/detail/@x.Id" class="btn btn-success">Sửa</a>
                                            <a href="/khachhang/remove/@x.Id" onclick="return confirm('Bạn có chắc muốn xóa?')" class="btn btn-danger">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr class="text-center">
                                    <td class="pt-4" colspan="7">Không có dữ liệu</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

